<div class="jumbotron">

<div class="container">
  <h2>Add new student</h2>
<%= form_for :student, url: students_path do |f| %>

<% if @student.errors.any? %>
  <h3 class="text-center">Errors</h3>
  <ul class="text-center">
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  <% end %>


  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.file_field :image %>
    </br>
  </div>
  </div>


<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control opacity" %>
    </br>
  </div>
</div>

<div class="form-group">
  <%= f.label :surname, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :surname, class: "form-control opacity" %>
    </br>
  </div>
</div>

<div class="form-group">
  <%= f.label :interest, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :interest, class: "form-control opacity" %>
    </br>
  </div>
</div>
<div class="form-group">
			<div class="text-center">

  <div class="form-group">
      <button type="submit" class="btn btn-success btn-circle btn-outline glyphicon glyphicon-plus"></button>
      <%= link_to "", students_path, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-arrow-left" %>
</div>
  </div>
  </div>
</div>
</div>
<% end %>
