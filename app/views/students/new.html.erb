<h1 class="text-center none-margin-top-bottom">Add new student</h1>

<div class="container">
<%= form_for :student, url: students_path do |f| %>
<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name %>
    </br>
  </div>
</div>

<div class="form-group">
  <%= f.label :surname, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :surname %>
    </br>
  </div>
</div>

<div class="form-group">
  <%= f.label :pesel, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :pesel %>
    </br>
  </div>
</div>
<div class="form-group">
			<div class="text-center">

  <div class="form-group">
      <button type="submit" class="btn btn-success btn-circle btn-outline glyphicon glyphicon-plus"></button>
      <%= link_to "", students_path, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-arrow-left" %>
  </div>


<% end %>
