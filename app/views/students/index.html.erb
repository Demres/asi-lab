
<div class="jumbotron">
    <div class="container">
                <h1>Students</h1>
                <table class="table table-bordered table-striped text-center table-background opacity">
                  <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Pesel</th>
                  </tr>

                  <% @students.each do |student| %>
                    <tr>
                      <td><%= student.name %></td>
                      <td><%= student.surname %></td>
                      <td><%= student.pesel %></td>
                      <td><%= link_to 'Show', student_path(student) %></td>
                    </tr>
                  <% end %>
                </table>
      </div>
    </div>
