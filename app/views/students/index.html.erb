
<div class="jumbotron">
    <div class="container">
                <h2>Students</h2>
                <div class="table-responsive">
                <table class="table table-bordered table-striped table-background opacity">
                  <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Interest</th>
                    <th class="text-center"></th>
                  </tr>

                  <% @students.each do |student| %>
                    <tr>
                      <td><%= student.name %></td>
                      <td><%= student.surname %></td>
                      <td><%= student.interest %></td>
                      <td class="text-center"> <%= link_to "", student_path(student), class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-search" %>
                      <% if user_signed_in? %>
                      <%= link_to "", edit_student_path(student), class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-pencil" %>
                      <%= link_to "", student_path(student) , method: :delete, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-remove" %></td>
                      <% end %>
                    </tr>
                  <% end %>
                </table>
                </div>
                <% if user_signed_in? %>
                <%= link_to "", new_student_url, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-plus" %></br>
                <% end %>
                <div class="text-center">
                <%= will_paginate @students, renderer: BootstrapPagination::Rails %>
              </div>
      </div>
    </div>
