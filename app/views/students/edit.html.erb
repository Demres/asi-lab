<div class="jumbotron">

<div class="container">
  <h2>Edit student</h2>
<%= form_for @student do |f| %>

<% if @student.errors.any? %>
  <h3 class="text-center">Errors</h3>
  <ul class="text-center">
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  <% end %>

<%= image_tag @student.image.url, :style => "border-radius: 8px; width: 300px; height: 300px; border: 1px solid #ddd"%>
</br>
</br>
<div class="form-group">
  <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.file_field :image %>
  </br>
</div>
</div>


<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control opacity" %>
    </br>
  </div>
</div>

<div class="form-group">
  <%= f.label :surname, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :surname, class: "form-control opacity" %>
    </br>
  </div>
</div>

<div class="form-group">
  <%= f.label :interest, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :interest, class: "form-control opacity" %>
    </br>
  </div>
</div>
<div class="form-group">
			<div class="text-center">

  <div class="form-group">
      <button type="submit" class="btn btn-success btn-circle btn-outline glyphicon glyphicon-ok"></button>
      <%= link_to "", students_path, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-arrow-left" %>
</div>
  </div>
  </div>
</div>
</div>
<% end %>
